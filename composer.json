{
    "name": "dev-toolbelt/jwt-token-manager",
    "description": "Framework-agnostic JWT token manager with RSA/HMAC support",
    "type": "library",
    "license": "MIT",
    "keywords": ["jwt", "token", "authentication", "rsa", "hmac"],
    "authors": [
        {
            "name": "Kilderson Sena",
            "email": "dersonsena@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit --configuration tests/phpunit.xml",
        "test:coverage": "php -d pcov.enabled=1 -d pcov.directory=src vendor/bin/phpunit --configuration tests/phpunit-coverage.xml",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "phpstan": "phpstan analyse --configuration=phpstan.neon --memory-limit=512M"
    },
    "require": {
        "php": "^8.1",
        "dev-toolbelt/enums": "^1.0",
        "firebase/php-jwt": "^6.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "DevToolbelt\\JwtTokenManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevToolbelt\\JwtTokenManager\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
